<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.caios.tatametimer.MainActivity"
    tools:showIn="@layout/activity_main">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:background="@color/pink"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vantagem:" />

                    <TextView
                        android:id="@+id/textAdvantagePlayerB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:background="@color/half_black"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Penalidade:" />

                    <TextView
                        android:id="@+id/textPenaltyPlayerB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@color/blue_semi_transparent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txChronometer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:format="%s"
                    android:gravity="center"
                    android:text="00:00"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/textViewPoints"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0 x 0"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:background="@color/pink"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vantagem:" />

                    <TextView
                        android:id="@+id/textAdvantagePlayerA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:background="@color/half_black"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Penalidade:" />

                    <TextView
                        android:id="@+id/textPenaltyPlayerA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">


            <LinearLayout
                android:id="@+id/llButtonsPlayerB"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txNamePlayerB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btMountedPlayerB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClickPlayerB"
                    android:text="Montada (b)" />

                <Button
                    android:id="@+id/btFootprintPlayerB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClickPlayerB"
                    android:text="Pegada Pelas Costas (b)" />

                <Button
                    android:id="@+id/btCrossingGuardPlayerB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClickPlayerB"
                    android:text="Passagem de Guarda (b)" />

                <Button
                    android:id="@+id/btTumblePlayerB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClickPlayerB"
                    android:text="Queda (b)" />

                <Button
                    android:id="@+id/btScrapePlayerB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClickPlayerB"
                    android:text="Raspagem (b)" />

                <Button
                    android:id="@+id/btKneeInBellyPlayerB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClickPlayerB"
                    android:text="Joelho na Barriga (b)" />

                <Button
                    android:id="@+id/btPunishmentsPlayerB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClickPlayerB"
                    android:text="Punição (b)" />


                <Button
                    android:id="@+id/btAdvantagesPlayerB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClickPlayerB"
                    android:text="Vantagem (b)" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llButtonsPlayerA"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txNamePlayerA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btMountedPlayerA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClickPlayerA"
                    android:text="Montada (a)" />

                <Button
                    android:id="@+id/btFootprintPlayerA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClickPlayerA"
                    android:text="Pegada Pelas Costas (a)" />

                <Button
                    android:id="@+id/btCrossingGuardPlayerA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClickPlayerA"
                    android:text="Passagem de Guarda (a)" />

                <Button
                    android:id="@+id/btTumblePlayerA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClickPlayerA"
                    android:text="Queda (a)" />

                <Button
                    android:id="@+id/btScrapePlayerA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClickPlayerA"
                    android:text="Raspagem (a)" />

                <Button
                    android:id="@+id/btKneeInBellyPlayerA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClickPlayerA"
                    android:text="Joelho na Barriga (a)" />

                <Button
                    android:id="@+id/btPunishmentsPlayerA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClickPlayerA"
                    android:text="Punição (a)" />

                <Button
                    android:id="@+id/btAdvantagesPlayerA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClickPlayerA"
                    android:text="Vantagem (a)" />
            </LinearLayout>
        </LinearLayout>

</LinearLayout>